    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_btn_change_login"
        app:layout_constraintTop_toBottomOf="@id/settings_text_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settings_button">

        <TextView
            android:id="@+id/settings_login"
            app:layout_constraintTop_toTopOf="@id/settings_btn_change_login"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/settings_default_login"
            style="@style/normal_text" />

        <TextView
            android:id="@+id/settings_label_login"
            app:layout_constraintTop_toBottomOf="@id/settings_login"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/settings_label_login"
            style="@style/small_text" />
        <View
            app:layout_constraintTop_toBottomOf="@id/settings_label_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/gray_line" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_btn_change_notification"
        app:layout_constraintTop_toBottomOf="@id/settings_btn_change_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settings_button">

        <TextView
            android:id="@+id/settings_email"
            app:layout_constraintTop_toTopOf="@id/settings_btn_change_notification"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/settings_email"
            style="@style/normal_text" />

        <TextView
            android:id="@+id/settings_label_notification"
            app:layout_constraintTop_toBottomOf="@id/settings_email"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/settings_label_email"
            style="@style/small_text" />
        <View
            app:layout_constraintTop_toBottomOf="@id/settings_label_notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/gray_line" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_btn_change_exit"
        app:layout_constraintTop_toBottomOf="@id/settings_btn_change_notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settings_button">

        <View
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@id/imageButton_signOut"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/gray_line" />
        <ImageButton
            android:id="@+id/imageButton_signOut"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_baseline_login_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/settings_btn_change_exit"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="385dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_change_photo"
        android:layout_width="@dimen/settings_user_photo_width"
        android:layout_height="@dimen/settings_user_photo_height"
        android:layout_margin="@dimen/margin_horizontal"
        android:src="@drawable/ic_baseline_photo_camera_24"
        app:civ_border_color="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/settings_header_block"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_header_block"
        android:layout_marginEnd="@dimen/margin_horizontal"/>



</androidx.constraintlayout.widget.ConstraintLayout>


